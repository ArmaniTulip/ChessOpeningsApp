             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpeningsApp.Openings.ScotchGamePage"
             Title="The Scotch Game"
             Background="Black">
    <ScrollView>
        <VerticalStackLayout>
            <Label FontSize="Body" Margin="20" TextColor="White" 
            Text="The Scotch Game occurs when White breaks in the center with 3.d4,
